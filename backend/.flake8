# мягкие правила
[flake8]
max-line-length = 100
max-complexity = 12
select = C,E,F,W,B,B9,WPS
ignore =
    # Django settings and migrations
    WPS407, WPS432, WPS201, WPS221, WPS226, WPS237,
    # readability & practical things
    WPS111, WPS305, WPS306, WPS323, WPS420, WPS430,
    # formatting and docs
    D100, D101, D102, D103, D104, D105, D106, D107,
    E203, E501
per-file-ignores =
    manage.py: WPS305, WPS412, WPS432
    */migrations/*: D, WPS, E501


